@{
    ViewData["Title"] = "Delete Movie Forum";
}

@model ApplicationResponse
@* Forum to delet an application *@
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the movie @Model.Title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Waitlist" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="ApplicationId" />
</form>