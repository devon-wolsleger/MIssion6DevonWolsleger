@{
    ViewData["Title"] = "Movie forum";
}

@model MIssion6DevonWolsleger.Models.ApplicationResponse

@*This is where the user will fill out the movies*@

<h1>Fill out this movie forum</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="CatagoryId"> Catagory: </label>
        <select asp-for="CatagoryId">
            <option value="">Select Catagory</option>
            @foreach (Catagory c in ViewBag.Catagories)
            {
                <option value="@c.CatagoryId">@c.CatagoryName</option>
            }
        </select><br />

        <label asp-for="Title"> Title: </label>
        <input asp-for="Title" /><br />

        <label asp-for="Year"> Year: </label>
        <input asp-for="Year" /> <br />

        <label asp-for="Director"> Director: </label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating"> Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited"> Edited: </label>
        <select asp-for="Edited">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select><br />

        <label asp-for="LentTo"> Lent to: </label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes"> Notes: </label>
        <input asp-for="Notes" /><br />

        <button type="submit">Submit Movie Forum</button>
    </form>
</div>
